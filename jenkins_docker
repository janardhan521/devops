pipeline{
  agent any
  stages{
    stage('Build'){
     steps{
        sh 'mvn -f pom.xml clean package'
      }
      post{
        success{
          echo 'Archive artifacts...'
          archiveArtifacts artifacts: '**/*.war'
        }
      }
    }
    Stage('Create Tomcat Docker Image'){
            steps {
                sh "docker build . -t tomcatsamplewebapp:${env.BUILD_ID}"
            }
        }
  }
}   